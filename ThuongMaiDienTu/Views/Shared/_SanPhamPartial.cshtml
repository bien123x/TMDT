@model List<ThuongMaiDienTu.Models.SanPham>

@if (Model.Count == 0)
{
    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle"></i> Không có sản phẩm nào.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var sanPham in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-img-top position-relative">
                        @{
                            string imageUrl = !string.IsNullOrEmpty(sanPham.Hinh_Anh)
                            ? sanPham.Hinh_Anh
                            : "/images/default-product-image.jpg";
                        }
                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sanPham.Id })">
                            <img src="@Url.Content(imageUrl)" class="card-img-top" alt="@sanPham.Ten_San_Pham"
                                style="height: 180px; object-fit: cover;">
                        </a>

                        @if (sanPham.Giam_Gia > 0)
                        {
                            <div class="position-absolute top-0 end-0 bg-danger text-white px-2 py-1 m-2 rounded-pill">
                                Giảm @sanPham.Giam_Gia.Value.ToString("N0") ₫
                            </div>
                        }
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sanPham.Id })"
                                class="text-decoration-none text-dark">
                                @sanPham.Ten_San_Pham
                            </a>
                        </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                @if (sanPham.Giam_Gia > 0)
                                {
                                    <p class="text-decoration-line-through text-muted mb-0">
                                        @sanPham.Gia_Goc.ToString("N0") ₫
                                    </p>
                                    <p class="fw-bold text-danger mb-0">
                                        @((sanPham.Gia_Goc - sanPham.Giam_Gia).Value.ToString("N0")) ₫
                                    </p>
                                }
                                else
                                {
                                    <p class="fw-bold mb-0">@sanPham.Gia_Goc.ToString("N0") ₫</p>
                                }
                            </div>
                            <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = sanPham.Id })"
                                class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}