@model ThuongMaiDienTu.Models.SanPham

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = null;
}

<link rel="stylesheet" href="@Url.Content("~/css/ChiTietSanPham.css")">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<header>
    <a href="@Url.Action("TrangChu", "Home")" class="logo">
        <img src="@Url.Content("~/images/logo.png")" alt="TikTok Shop Logo" class="logo-img">
        TikTokShop
    </a>

    <div class="search-bar">
        <form asp-controller="Home" asp-action="TimKiem" method="get">
            <input type="text" name="tuKhoa" placeholder="Tìm kiếm sản phẩm...">
            <button type="submit" class="search-button">Tìm Kiếm</button>
        </form>
    </div>

    <div class="icons">
        <i class="fas fa-shopping-cart"></i>
        <i class="fas fa-user"></i>
    </div>
    <div class="DangNhap">
        <a asp-controller="Account" asp-action="Login" class="BtnDangNhap"> Đăng nhập </a>
    </div>
</header>

<main>
    <div class="product-detail">
        <div class="image">
            <img src="@Url.Content(Model.Hinh_Anh)" alt="@Model.Ten_San_Pham">
        </div>
        <div class="info">
            <h1>@Model.Ten_San_Pham</h1>
            <p>⭐ 5/5 từ 3 đánh giá</p>
            <p><del>@Model.Gia_Goc.ToString("N0") VNĐ</del> <strong>@(Model.Gia_Goc - Model.Giam_Gia) VNĐ</strong></p>
            <p>Số lượng: <input type="number" value="1" min="1" max="@Model.So_Luong_Ton"> @Model.So_Luong_Ton sản phẩm có sẵn</p>
            <button class="add-to-cart">Thêm vào giỏ hàng</button>
        </div>
    </div>

    <div class="description">
        <h2>Mô tả sản phẩm</h2>
        <p>@Model.Mo_Ta</p>

        <h3>Thông tin sản phẩm</h3>
        <p>Thương hiệu: Nhiều thương hiệu khác nhau</p>
        <p>Khối lượng: Đa dạng tùy loại sản phẩm</p>
        <p>Xuất xứ: Nhiều quốc gia khác nhau</p>

    </div>

    <div class="review">
        <h2>Đánh Giá Sản Phẩm</h2>
        <div class="review-item">
            <p><strong>Tuấn Dũng</strong> - 15/03/2025</p>
            <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
            <p>Sản phẩm rất chất lượng</p>
        </div>
        <div class="review-item">
            <p><strong>Hồng Ánh</strong> - 21/02/2025</p>
            <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
            <p>Chất lượng lắm ạ</p>
        </div>
        <div class="review-item">
            <p><strong>Quang Biên</strong> - 11/01/2025</p>
            <p>⭐ ⭐ ⭐ ⭐ ⭐</p>
            <p>Tôi rất ưu sản phẩm</p>
        </div>
    </div>
</main>
