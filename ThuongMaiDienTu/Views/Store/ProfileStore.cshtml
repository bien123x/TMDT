@model ThuongMaiDienTu.Models.CuaHang

@{
    ViewData["Title"] = "Thông Tin Cửa Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy thông tin vai trò người dùng từ session
    var userRoleId = Context.Session.GetInt32("UserRoleId");
    var userId = Context.Session.GetInt32("UserId");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title text-center mb-0">@Model.Ten_Cua_Hang</h2>
                </div>
                <div class="card-body">
                    <div class="store-info mb-4">
                        <div class="mb-3">
                            <h5 class="text-secondary">Thông tin cửa hàng</h5>
                            <p class="text-muted">@Model.Mo_Ta</p>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <div>
                                <i class="bi bi-calendar3"></i>
                                <span class="ms-2">Tham gia từ: @Model.Ngay_Tao.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div>
                                <i class="bi bi-box-seam"></i>
                                <span class="ms-2">Số lượng sản phẩm: @ViewBag.ProductCount</span>
                            </div>
                        </div>
                    </div>

                    @* Chỉ hiển thị thông tin người bán nếu người dùng là Admin (Vai_Tro_Id = 3) hoặc là chính người bán này *@
                    @if ((userRoleId == 3 || Model.Id_Nguoi_Ban == userId) && ViewBag.StoreSeller != null)
                    {
                        <div class="seller-info mb-4">
                            <h5 class="text-secondary">Thông tin người bán</h5>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><i class="bi bi-person"></i> <strong>Họ tên:</strong> @ViewBag.StoreSeller.Ho_Ten</p>
                                    <p><i class="bi bi-envelope"></i> <strong>Email:</strong> @ViewBag.StoreSeller.Email</p>
                                </div>
                                <div class="col-md-6">
                                    <p><i class="bi bi-telephone"></i> <strong>Số điện thoại:</strong>
                                        @ViewBag.StoreSeller.So_Dien_Thoai</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="ratings mb-4">
                        <h5 class="text-secondary">Đánh giá cửa hàng</h5>
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <span class="display-4">@ViewBag.AverageRating</span>
                                <span class="text-muted">/5</span>
                            </div>
                            <div>
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Floor(ViewBag.AverageRating))
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                        else if (i - ViewBag.AverageRating < 1 && i - ViewBag.AverageRating > 0)
                                        {
                                            <i class="bi bi-star-half text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-warning"></i>
                                        }
                                    }
                                </div>
                                <div class="text-muted">
                                    Dựa trên @ViewBag.ReviewCount đánh giá
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "SanPham", new { storeId = Model.Id })" class="btn btn-primary">
                            <i class="bi bi-shop"></i> Xem sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>